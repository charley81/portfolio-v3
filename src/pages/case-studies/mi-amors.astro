---
import Layout from '../../layouts/Layout.astro'
import '../../styles/globals.css'
import data from '../../data/casestudies/miamors.json'
import ContactButton from '@/components/shared/contact-button.astro'
import { CaseStudyHero, Overview, CaseStudySection } from '@/components/shared/'
---

<Layout title="Welcome to The Case Study for Mi Amor's">
  <main
    class="min-[616px]:max-w-[616px] mx-auto min-[744px]:max-w-[744px] min-[1028px]:max-w-[1028px]"
  >
    <CaseStudyHero
      title={data.hero.title}
      body={data.hero.body}
      image={data.hero.image}
    />

    <!-- TODO: Make a component for this section -->
    <section
      class="mt-40 w-full flex flex-col gap-8 text-center py-16 min-[744px]:flex-row border-t-2 border-b-2 justify-between"
    >
      <div class="flex flex-col gap-2">
        <p class="font-bold">Role</p>
        <p>UX/UI Designer</p>
      </div>
      <div class="flex flex-col gap-2">
        <p class="font-bold">Team</p>
        <p>Chris Harley</p>
        <p class="text-sm">(Solo)</p>
      </div>
      <div class="flex flex-col gap-2">
        <p class="font-bold">Duration</p>
        <p>Oct 2024</p>
        <p class="text-sm">(2 wk. total)</p>
      </div>
    </section>

    <Overview
      name={data.overview.name}
      title={data.overview.title}
      body={data.overview.body}
    />
    <!-- section 1 -->
    <CaseStudySection
      image={data.section1.image}
      title={data.section1.title}
      body={data.section1.body}
    />
    <!-- section 2 -->
    <CaseStudySection
      image={data.section2.image}
      title={data.section2.title}
      body={data.section2.body}
    />
    <!-- section 3 -->
    <CaseStudySection
      image={data.section3.image}
      title={data.section3.title}
      body={data.section3.body}
    />
    <!-- section 4 -->
    <CaseStudySection
      image={data.section4.image}
      title={data.section4.title}
      body={data.section4.body}
    />
    <!-- section 5 -->
    <CaseStudySection
      image={data.section5.image}
      title={data.section5.title}
      body={data.section5.body}
    />
    <!-- section 6 -->
    <CaseStudySection
      image={data.section6.image}
      title={data.section6.title}
      body={data.section6.body}
    />
    <ContactButton text="Let's Chat, I'm open for work!" />
  </main>
</Layout>
