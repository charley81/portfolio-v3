---
import { Image } from 'astro:assets'
import { truncate } from '../../lib/utils'

const { title, image, description } = Astro.props
---

<div>
  <Image
    src={image}
    alt={title}
    width={500}
    height={500}
    loading="eager"
    class="mb-4"
    inferSize
  />
  <h3 class="font-bold text-2xl text-custom-dark-grey mb-1">{title}</h3>
  <p>{truncate(description, 200)}</p>
</div>
