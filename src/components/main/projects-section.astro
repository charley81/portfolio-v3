---
import projectCardInfo from '@/data/project-card-info'
import ProjectCard from './project-card.astro'
---

<section
  class="mt-40 grid gap-20 px-4 max-w-[768px] mx-auto lg:grid-cols-2 lg:gap-8"
>
  {
    projectCardInfo.map((project) => (
      <ProjectCard
        key={project.title}
        title={project.title}
        description={project.description}
        image={project.image}
      />
    ))
  }
</section>
