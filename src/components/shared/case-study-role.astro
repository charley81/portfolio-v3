---
const { role, team, teamSubtitle, durationDate, durationTime } = Astro.props
---

<section
  class="mt-40 w-full flex flex-col gap-8 text-center py-16 min-[744px]:flex-row border-t-2 border-b-2 justify-between"
>
  <div class="flex flex-col gap-2">
    <p class="font-bold">Role</p>
    <p>{role}</p>
  </div>
  <div class="flex flex-col gap-2">
    <p class="font-bold">Team</p>
    <p>{team}</p>
    <p class="text-sm">({teamSubtitle})</p>
  </div>
  <div class="flex flex-col gap-2">
    <p class="font-bold">Duration</p>
    <p>{durationDate}</p>
    <p class="text-sm">({durationTime})</p>
  </div>
</section>
